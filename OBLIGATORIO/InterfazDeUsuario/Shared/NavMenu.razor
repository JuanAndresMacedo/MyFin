@using Logica
@inject EspacioLogica EspacioLogica

<div class="top-row ps-3 navbar navbar-dark" id="navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="/Principal">MyFin</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="nav-menu flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Principal" Match="NavLinkMatch.All" title="@EspacioLogica.EspacioActual()?.Nombre">
                <i class="bi bi-house"></i> <span class="truncate-text"> @EspacioLogica.EspacioActual()?.Nombre </span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Cuentas" Match="NavLinkMatch.All">
                <i class="bi bi-wallet2"></i> Cuentas
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Categorias" Match="NavLinkMatch.All">
                <i class="bi bi-tags"></i> Categorías
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/ObjetivosDeGasto" Match="NavLinkMatch.All">
                <i class="bi bi-bag-check"></i> Objetivos de gasto
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Transacciones" Match="NavLinkMatch.All">
                <i class="bi bi-arrow-down-up"></i> Transacciones
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/TiposDeCambio" Match="NavLinkMatch.All">
                <i class="bi bi-cash"></i> Tipos de cambio
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Reportes" Match="NavLinkMatch.All">
                <i class="bi bi-bar-chart"></i> Reportes
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Perfil">
                <i class="bi bi-person"></i> Perfil
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CambiarDeEspacio" Match="NavLinkMatch.All">
                <i class="bi bi-arrow-repeat"></i> Cambiar de espacio
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Salir">
                <i class="bi bi-box-arrow-left"></i> Salir
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}